  <!-- スマホ用：ハンバーガー -->
 <button class="hamburger" id="menuBtn" aria-label="メニュー" aria-expanded="false" aria-controls="mobileMenu">
  <span class="hamburger__icon" aria-hidden="true">
  <span></span><span></span><span></span>
</span>
</button>
</header>

<!-- スマホ用メニュー -->
<div class="mobile-menu" id="mobileMenu" aria-hidden="true">
  <div class="mobile-menu__panel">
    <div class="mobile-menu__head">
      <span class="mobile-menu__title">MENU</span>
      <button class="mobile-menu__close" id="menuClose" aria-label="閉じる">✕</button>
    </div>

    <a href="/business">事業内容</a>
    <a href="/news">お知らせ</a>
    <a href="/company">会社概要</a>
    <a class="btn primary" href="/contact">お問い合わせ</a>
  </div>
</div>

<script>
  const btn = document.getElementById('menuBtn');
  const closeBtn = document.getElementById('menuClose');
  const menu = document.getElementById('mobileMenu');

  function openMenu() {
    menu.classList.add('is-open');
    menu.setAttribute('aria-hidden', 'false');
    btn.setAttribute('aria-expanded', 'true');
  }
  function closeMenu() {
    menu.classList.remove('is-open');
    menu.setAttribute('aria-hidden', 'true');
    btn.setAttribute('aria-expanded', 'false');
  }

  btn?.addEventListener('click', openMenu);
  closeBtn?.addEventListener('click', closeMenu);
  menu?.addEventListener('click', (e) => { if (e.target === menu) closeMenu(); });
  document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeMenu(); });
</script>

    <main>
      <slot />
    </main>

    <footer>
      <div style="max-width: var(--max); margin: 0 auto;">
        © {new Date().getFullYear()} 株式会社ユトリア
      </div>
    </footer>
  </body>
</html>
<style>
.site-header{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:16px;
}

.pc-nav{
  display:flex;
  align-items:center;
  gap:18px;
}

/* ===== Mobile Drawer ===== */
/* ハンバーガーボタン本体 */
.hamburger{
  display:none;
  width:44px; height:44px;
  border:1px solid #eee;
  background:#fff;
  border-radius:12px;
  align-items:center;
  justify-content:center;
  cursor:pointer;
}
.hamburger:hover{ background:#f7f7f7; }

/* 3本線の箱 */
.hamburger__icon{
  width:18px;
  height:14px;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
}

/* 3本線 */
.hamburger__icon span{
  display:block;
  height:2px;
  background:#111;
  border-radius:999px;
}
.mobile-menu{
  position:fixed;
  inset:0;
  background:rgba(0,0,0,.35);
  opacity:0;
  pointer-events:none;
  transition:opacity .18s ease;
}
.mobile-menu.is-open{
  opacity:1;
  pointer-events:auto;
}

.mobile-menu__panel{
  position:absolute;
  top:12px;
  right:12px;
  width:min(92vw, 360px);
  background:#fff;
  border-radius:18px;
  padding:16px;
  box-shadow: 0 18px 60px rgba(0,0,0,.18);
  transform: translateY(-6px) scale(.98);
  transition: transform .18s ease;
}
.mobile-menu.is-open .mobile-menu__panel{
  transform: translateY(0) scale(1);
}

.mobile-menu__head{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:12px;
  padding-bottom:10px;
  border-bottom:1px solid #f0f0f0;
  margin-bottom:12px;
}
.mobile-menu__title{
  font-weight:700;
  letter-spacing:.08em;
  font-size:12px;
  color:#666;
}
.mobile-menu__close{
  width:40px; height:40px;
  border:1px solid #eee;
  background:#fff;
  border-radius:12px;
  cursor:pointer;
}
.mobile-menu__close:hover{ background:#f7f7f7; }

.mobile-menu__panel a{
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding:12px 10px;
  border-radius:12px;
  text-decoration:none;
}
.mobile-menu__panel a:hover{ background:#f6f6f6; }
.mobile-menu__panel a::after{
  content:"→";
  color:#999;
  font-size:14px;
}
.mobile-menu__panel a.btn.primary{
  margin-top:10px;
  justify-content:center;
}
.mobile-menu__panel a.btn.primary::after{ content:""; }

/* PC/スマホ切替 */
@media (max-width: 768px){
  .pc-nav{ display:none; }
  .hamburger{ display:inline-flex; }
}.brand a{
  text-decoration: none !important;
  color: inherit !important;
}
.brand a:visited{
  color: inherit !important;
}
.brand{
  display: flex;
  align-items: center;
}
.brand a{
  font-weight: 700;
  letter-spacing: .08em;
  font-size: 20px;
  line-height: 1;
  padding: 10px 0;
}
header nav .brand{
  padding-left: 32px; /* ここを 24px, 32px にするともっと右 */
}
.site-header{
  max-width: var(--max);
  margin: 0 auto;
  padding: 14px 16px;   /* ← ここで右に寄る */
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:16px;
}
</style>